# ===== ОСНОВНЫЕ НАСТРОЙКИ =====
APP_NAME=StroiNadzorAI
APP_VERSION=3.0.0
DEBUG=False
ENVIRONMENT=production

# ===== TELEGRAM BOT =====
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Webhook настройки (для production)
USE_WEBHOOK=False
TELEGRAM_WEBHOOK_URL=https://your-domain.com
TELEGRAM_WEBHOOK_PATH=/webhook/telegram

# ===== OPENAI API =====
# Получите на https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7

# ===== DATABASE =====
DATABASE_URL=postgresql://stroinadzor:stroinadzor@localhost:5432/stroinadzor
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===== REDIS CACHE =====
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_PERIOD=3600
RATE_LIMIT_PREMIUM_REQUESTS=200

# ===== FASTAPI ADMIN PANEL =====
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_secret_key_here_change_in_production
API_CORS_ORIGINS=["*"]

# ===== FILE STORAGE =====
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=20971520

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_ROTATION=500 MB
LOG_RETENTION=30 days

# ===== SENTRY (опционально) =====
# SENTRY_DSN=your_sentry_dsn_here

# ===== EMAIL NOTIFICATIONS (опционально) =====
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_password
# SMTP_FROM=noreply@stroinadzor.ai

# ===== GOOGLE DRIVE INTEGRATION (опционально) =====
# GOOGLE_DRIVE_CREDENTIALS=path/to/credentials.json

# ===== JIRA INTEGRATION (опционально) =====
# JIRA_URL=https://your-domain.atlassian.net
# JIRA_EMAIL=your_email@example.com
# JIRA_API_TOKEN=your_jira_api_token

# ===== FEATURE FLAGS =====
ENABLE_VOICE_MESSAGES=True
ENABLE_PDF_REPORTS=True
ENABLE_OCR=True
ENABLE_GEOLOCATION=True
ENABLE_STREAMING=True

# ===== MONITORING =====
PROMETHEUS_PORT=9090
ENABLE_METRICS=True
